{
  "compilerOptions": {
    "rootDir": "./src",
    "target": "es5",
    "module": "ESNext",
    "lib": [
      "es5",
      "dom",
      "es2015.promise",
      "es2015",
      "es2016",
      "es2017",
      "es2018",
      "es2019",
      "es2020"
    ],
    "noImplicitAny": true,
    "strictNullChecks": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "skipLibCheck": true,
    "suppressImplicitAnyIndexErrors": true,
    "moduleResolution": "node",
    "strict": true,
    "baseUrl": ".",
    "outDir": "./esm",
    "preserveSymlinks": true,
    "esModuleInterop": true,
  },
  "include": ["src/*.ts", "src/types.d.ts"],
  "exclude": ["node_modules"]
}